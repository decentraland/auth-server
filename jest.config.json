{
  "moduleFileExtensions": ["ts", "js"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "coverageDirectory": "coverage",
  "collectCoverageFrom": ["src/**/*.ts", "src/**/*.js"],
  "coveragePathIgnorePatterns": ["/node_modules/", "index.ts", "src/migrations"],
  "testMatch": ["**/test/unit/*.spec.(ts)"],
  "testEnvironment": "node",
  "resetMocks": true
}
